generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id               String     @id @default(auto()) @map("_id") @db.ObjectId
  email            String     @unique
  name             String?
  password         String
  bookedViewings   Json[]
  favPropertiesID  String[]   @db.ObjectId
  ownedProperties  Property[] @relation("Owner")
  bookedProperties Property[] @relation("BookedBy")
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
}

model Property {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Int
  address     String
  image       String
  city        String
  country     String
  facilities  Json[]
  ownerEmail  String
  bookedByID  String @db.ObjectId
  owner       User   @relation("Owner", fields: [ownerEmail], references: [email])
  bookedBy    User   @relation("BookedBy", fields: [bookedByID], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique(fields: [address, ownerEmail])
}
